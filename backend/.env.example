# =====================================================
# BookingPMS Backend Configuration
# =====================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# Database
DATABASE_URL="mysql://user:password@localhost:3306/bookingpms"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# Server
PORT=5000
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# =====================================================
# Cloudbeds API Configuration (OAuth 2.0)
# =====================================================
# Get these from your Cloudbeds developer dashboard
# https://hotels.cloudbeds.com/api/docs/

CLOUDBEDS_CLIENT_ID="your-cloudbeds-client-id"
CLOUDBEDS_CLIENT_SECRET="your-cloudbeds-client-secret"
CLOUDBEDS_HOTEL_SLUG="your-hotel-name"

# Optional: If you have tokens already (from OAuth flow)
# These are obtained after completing OAuth authorization
CLOUDBEDS_ACCESS_TOKEN=""
CLOUDBEDS_REFRESH_TOKEN=""

# =====================================================
# Email Configuration (Optional)
# =====================================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-password

# =====================================================
# SMS Configuration (Optional)
# =====================================================
SMS_API_KEY=your-sms-api-key
SMS_PROVIDER=twilio
